numeros = []
cont = 0
a2 = 0

while cont <= 4:
    numeros.append(int(input(f"Digite o valor a ser incluido na posição {cont}: ")))
    cont +=1

print('=-'*30)
print(f"você digitou os valores {numeros}".title())

list_max = []
list_min = []
max = max(numeros)
min = min(numeros)
i = 0
for x in numeros:
    if x == max:
        list_max.append(i)
    if x == min:
        list_min.append(i)
    i += 1

print (f"O maior valor digitado foi {max} nas posições {list_max}...")

print(f"O menor valor digitado foi {min} na(s) posição(ões) {list_min}...")

